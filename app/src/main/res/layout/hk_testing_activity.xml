<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff000000"
    android:orientation="vertical"
    android:id="@+id/myView2">

    <TextView
        android:id="@+id/titleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"
        android:gravity="center_vertical|start"
        android:paddingLeft="6dp"
        android:paddingStart="6dp"
        android:text="@string/app_name"
        android:textColor="#ffffffff"
        android:textSize="18sp"
        android:layout_marginBottom="8dp"/>

    <com.philolog.hoplitekb.HCGreekEditText
        android:id="@+id/mTextView"
        android:layout_below="@+id/titleView"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="#ffffffff"
        android:textColor="#ff000000"
        android:ems="20"
        android:gravity="start"
        android:inputType="textMultiLine|textNoSuggestions"
        android:padding="20dp"
        android:paddingBottom="20dp"
        android:paddingEnd="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingStart="20dp"
        android:paddingTop="20dp"
        android:text=""
        android:textAlignment="viewStart"
        android:textSize="44sp"
        android:textIsSelectable="true"
        android:cursorVisible="true"
        android:textCursorDrawable="@drawable/cursor" />

    <TextView
        android:id="@+id/modeView"
        android:layout_below="@+id/mTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"
        android:gravity="center_vertical|start"
        android:paddingLeft="6dp"
        android:paddingStart="6dp"
        android:text="Unicode mode: "
        android:textColor="#ffffffff"
        android:textSize="18sp"

        android:layout_marginBottom="8dp"/>

    <EditText
        android:layout_below="@+id/modeView"
        android:id="@+id/mCodePointTextView"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="#ff000000"
        android:textColor="#ffffffff"
        android:ems="20"
        android:gravity="start"
        android:inputType="textMultiLine|textNoSuggestions"
        android:paddingBottom="0dp"
        android:paddingEnd="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingStart="10dp"
        android:paddingTop="6dp"
        android:text=""
        android:textAlignment="viewStart"
        android:textSize="20sp"
        android:layout_marginTop="4dp"
        android:editable="false"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        />
    <com.philolog.hoplitekb.HopliteKeyboardView
        android:id="@+id/keyboardview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:visibility="gone"
        android:padding="1dp"
        android:translationZ="999dp"
        />

</RelativeLayout>
